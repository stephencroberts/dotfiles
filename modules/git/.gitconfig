[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  lg = log -p
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  rb = rbranch
  rv = review
  st = status
[apply]
  whitespace = fix
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[commit]
  gpgsign = true
[core]
  autocrlf = input
  excludesfile = ~/.gitignore_global
  pager = delta
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
[delta]
  line-numbers = true
[diff]
  colorMoved = default
[init]
  defaultBranch = prod
  templatedir = ~/.git_template
[interactive]
  diffFilter = delta --color-only
[gpg]
  program = /opt/homebrew/bin/gpg
[merge]
  conflictstyle = diff3
  log = true
[pull]
  rebase = false
[rerere]
  enabled = 1
